<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />                           
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> <!-- Responsive viewport layout on all devices -->
    <title>@ViewData["Title"] - EmployeeManagement</title> <!-- Dynamic page title -->

    <!-- Bootstrap core CSS -->
      <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
 <!-- Site-wide custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> 
  <!-- Bootstrap icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />  
    
</head>
<body>
    <!-- page wrapper for sticky footer -->
    <div class="page-wrapper">                            

        <!-- navbar-->
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow"> <!-- Navbar -->
                <div class="container-fluid">
                    <a class="navbar-brand"
                       asp-area=""
                       asp-controller="Home"
                       asp-action="Index">                
                        SentientGeeks
                    </a>

                    <button class="navbar-toggler"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse"
                            aria-expanded="false"
                            aria-label="Toggle navigation"> <!-- Mobile menu toggle -->
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"> <!-- Collapsible menu -->
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Employee"
                                   asp-action="Index">      <!-- Add navigation -->
                                    Add
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Employee"
                                   asp-action="Index">      <!-- Delete navigation -->
                                    Delete
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Employee"
                                   asp-action="Index">      <!-- Update navigation -->
                                    Update
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- main content render view -->
        <main class="content container pb-3">             
            @RenderBody()                              
        </main>

        <!-- footer -->
        <footer class="border-top footer text-muted">   
            <div class="container">
                &copy; 2026 - SentientGeeks                
            </div>
        </footer>

    </div>

    <!-- Scripts -->
<!-- jQuery dependency (required for validation and Bootstrap JS plugins) -->
<script src="~/lib/jquery/dist/jquery.min.js"></script> 
<!-- Bootstrap JS bundle (includes Popper) -->
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
<!-- jQuery client-side validation -->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
<!-- ASP.NET Core unobtrusive validation -->
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> 
<!-- Global custom employee module–specific JavaScript -->
<script src="~/js/employee.js" asp-append-version="true"></script> 

@await RenderSectionAsync("Scripts", required: false) <!-- Optional page-specific scripts -->
</body>
</html>
