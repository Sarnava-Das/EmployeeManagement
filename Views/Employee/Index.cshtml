@model IEnumerable<EmployeeManagement.Models.Employee>  
    <!-- Employee list model -->
@{
    ViewData["Title"] = "Manage Employees";              <!-- page title -->
}

<div class="card emp-card shadow-sm mt-4">               <!-- main card container -->

    <!-- header-->
    <div class="emp-header d-flex justify-content-between align-items-center"> 
        <h5 class="mb-0">Manage Employees</h5>             
        <div>
            <!-- bulk delete button calling the js function openBulkDeleteModal() to open bulkdelete modal -->
            <button type="button"
                    class="btn btn-danger btn-sm me-2"
                    onclick="openBulkDeleteModal()">       
                <i class="bi bi-dash-circle"></i> Delete
            </button>

          
            <button type="button"
                    class="btn btn-success btn-sm"
                    data-bs-toggle="modal"
                    data-bs-target="#addModal">            <!-- Open add employee modal -->
                <i class="bi bi-plus-circle"></i> Add New Employee
            </button>
        </div>
    </div>

   <!-- server-side bulk deletion -->
    <div class="card-body p-0">                            <!-- card body -->
        <form id="deleteForm" method="post" asp-action="DeleteMultiple"> <!-- bulk delete form -->
            <table class="table emp-table mb-0 align-middle"> <!-- employee table -->
                <thead>
                    <tr>
                        <th class="ps-3">
                            <input type="checkbox" id="selectAll" /> <!-- Select all checkbox -->
                        </th>
                        <th>Name</th>                       
                        <th>Email</th>                     
                        <th>Address</th>                    
                        <th>Phone</th>                     
                        <th class="text-center">Actions</th> <!-- action buttons column -->
                    </tr>
                </thead>

                <tbody>
                @foreach (var item in Model)     @* Loop through employees  *@
                {
                    <tr>
                        <td class="ps-3">
                            <input type="checkbox"
                                   class="row-checkbox"
                                   name="ids"
                                   value="@item.Id" />      <!-- Row checkbox -->
                        </td>
                        <td>@item.Name</td>                 
                        <td>@item.Email</td>               
                        <td>@item.Address</td>              
                        <td>@item.Phone</td>                
                        <td class="text-center">
                            <!-- edit button calls loanEdit(id) js function  to open edit modal -->
                            <button type="button"
                                    class="btn btn-warning btn-sm action-btn me-1"
                                    onclick="loadEdit(@item.Id)"> 
                                <i class="bi bi-pencil"></i>
                            </button>

                            <!-- single delete button calling the js function openDeleteModal(id) to open delete modal of single row -->
                            <button type="button"
                                    class="btn btn-danger btn-sm action-btn"
                                    onclick="openDeleteModal(@item.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </form>
    </div>

    <!-- server-side pagination since client-side is not scalable and efficient -->
    @if (ViewBag.TotalPages > 1)        @* Show pagination if needed  *@
    {
        <div class="d-flex justify-content-between align-items-center px-3 py-2 border-top">
            <span class="text-muted">
                Showing page @ViewBag.CurrentPage of @ViewBag.TotalPages <!-- Page info -->
            </span>

            <nav>
<!--server-side pagination since server sends only one page of data at a time and when next/previous page is clicked it is http request again to server i.e controller which renders the next/previous page of data from database -->
                <ul class="pagination pagination-sm mb-0">  
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)"> <!-- Previous page -->
                            Previous
                        </a>
                    </li>
<!--server-side pagination controls which is received by the controller i.e page no. depending on which list is rendered on html page -->
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)  @* Page numbers  *@
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i">          <!-- Page link -->
                                @i
                            </a>
                        </li>
                    }
<!--server-side pagination since server sends only one page of data at a time and when next/previous page is clicked it is http request again to server i.e controller which renders the next/previous page of data from database -->
                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)"> <!-- Next page -->
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<!--static partial views rendered using PartialAsync since controller/reload is not required i.e it is loaded once at page load -->
@await Html.PartialAsync("_CreateEmployee", new EmployeeManagement.Models.Employee()) 
@await Html.PartialAsync("_DeleteEmployee", new EmployeeManagement.Models.Employee()) 

<!-- edit modal container loaded dynamically using AJAX and js since user is dynamically selecting user to edit -->
<div class="modal fade" id="editModal" tabindex="-1">     
    <div class="modal-dialog">
        <div class="modal-content" id="editContent"></div> <!-- dynamic edit content -->
    </div>
</div>
