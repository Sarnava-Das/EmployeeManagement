<div class="modal fade" id="deleteModal" tabindex="-1"> <!-- Bootstrap delete confirmation modal -->
    <div class="modal-dialog modal-dialog-centered">   <!-- Centered modal dialog -->
        <div class="modal-content">                    <!-- Modal content container -->

            <div class="modal-header">                 <!-- Modal header -->
                <h5 class="modal-title">Delete Employee</h5> <!-- Modal title -->
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button> <!-- Close button -->
            </div>

            <div class="modal-body">                   <!-- Modal body -->
                <p>Are you sure you want to delete this record?</p> <!-- Confirmation message -->
                <p class="text-warning mb-0">This action cannot be undone.</p> <!-- Warning text -->
            </div>

            <div class="modal-footer">                 <!-- Modal footer -->
                <button class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel                             <!-- Cancel button -->
                </button>
                <button class="btn btn-danger" onclick="confirmDelete()">
                    Delete                             <!-- Confirm delete button -->
                </button>
            </div>

        </div>
    </div>
</div>
